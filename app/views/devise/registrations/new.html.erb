<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-row">
      <div class="form-label">
        <label class="right inline">Avatar:</label>
      </div>
      <div class="form-field">
        <div class="file upload">
          <div class="fileupload thumbnail" style="width: 40px; height: 40px; float: left; border: 1px solid #ccc;"><img width="40" height="40" src="/assets/user-avatar.png" /></div>
          <%= f.file_field :avatar, style: 'float: left; margin: 10px 0 23px 5px;' %>
        </div>
      </div>
    </div>


    <div class="form-row">
      <div class="form-label">
        <%= f.label :name, 'Nome', class: 'right inline' %>
      </div>
      <div class="form-field">
        <%= f.text_field :name %>
      </div>
    </div>


    <div class="form-row">
      <div class="form-label">
        <%= f.label :email, 'Email', class: 'right inline' %>
      </div>
      <div class="form-field">
        <%= f.email_field :email %>
      </div>
    </div>
    
    
    <div class="form-row">
      <div class="form-label">
        <%= f.label :password, 'Senha', class: 'right inline' %>
      </div>
      <div class="form-field">
        <%= f.password_field :password %>
      </div>
    </div>
    
    
    <div class="form-row">
      <div class="form-label">
        <%= f.label :password_confirmation, 'Confirme a senha:', class: 'right inline' %>
      </div>
      <div class="form-field">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    
    
    <div class="form-row">
      <div class="form-label"></div>
      <div class="form-field">
        <%= f.submit "Criar Conta", class: 'small button' %>
      </div>
    </div>
<% end %>
